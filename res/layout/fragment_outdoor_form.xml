<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <EditText
        android:id="@+id/outdoor_description"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:inputType="textCapWords"
        android:hint="@string/description" />

    <EditText
        android:id="@+id/outdoor_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/address"
        />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/map_button"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="#FF4444"
            android:drawableLeft="@drawable/map_icon"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/map_button"
        />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/outdoor_photo_container"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="#8EE0FF"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/outdoor_image_view1"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:background="#00BAFF"
            android:src="@drawable/content_new_picture"
            android:contentDescription="@string/picture_description" />
        <ImageView
            android:id="@+id/outdoor_image_view2"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:contentDescription="@string/picture_description" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/outdoor_image_view3"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:contentDescription="@string/picture_description" />
        <ImageView
            android:id="@+id/outdoor_audio_record"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:background="#00BAFF"
            android:contentDescription="@string/audio_record" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/outdoor_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8800"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/record"
        />
        <Button
            android:id="@+id/outdoor_submit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="#99CC00"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/submit"
        />
    </RelativeLayout>
</LinearLayout>