<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_heading"
        tools:context=".MainActivity" />

    <LinearLayout
   		android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
        android:orientation="horizontal">
	    <Button 
	        android:id="@+id/create_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/create_button_text"
	        android:onClick="displayCreateForm">
	    </Button>
	    
	    <Button
	    	android:id="@+id/my_reports_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="@string/my_reports_button_text">
	    </Button>
    </LinearLayout>
    
    <LinearLayout
   		android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
        android:orientation="horizontal">
	    <Button
	        android:id="@+id/settings_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_button_text"
	        >
	    </Button>
	        
	    <Button
	        android:id="@+id/view_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/view_button_text">
	    </Button>
    </LinearLayout>
</LinearLayout>